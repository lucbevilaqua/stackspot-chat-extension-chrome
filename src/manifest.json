{
  "manifest_version": 3,
  "name": "Stackspot Chat",
  "description": "Chat com o stackspot I.A",
  "version": "1.0.0",
  "permissions": [
    "sidePanel",
    "contextMenus"
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      }
    }
  },
  "icons": {
    "128": "images/logo-icon-128x128.png",
    "48": "images/logo-icon-48x48.png",
    "16": "images/logo-icon-16x16.png"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "action": {
    "default_title": "Click to open panel"
  },
  "background": {
    "service_worker": "service-worker.js"
  }
}
